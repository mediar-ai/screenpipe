{
    "bundle": {
        "macOS": {
            "entitlements": "entitlements.plist",
            "hardenedRuntime": true,
            "exceptionDomain": "screenpi.pe",
            "provisioningProfile": null,
            "dmg": {
                "background": "assets/dmg-background.png"
            }
        },
        "externalBin": [
            "screenpipe",
            "bun",
            "ui_monitor"
        ],
        "resources": {
            "ffmpeg/bin/*": "./ffmpeg/bin/",
            "ffmpeg/lib/*": "./ffmpeg/lib/",
            "ffmpeg/include/libavcodec": "./ffmpeg/include/libavcodec/",
            "ffmpeg/include/libavdevice": "./ffmpeg/include/libavdevice/",
            "ffmpeg/include/libavfilter": "./ffmpeg/include/libavfilter/",
            "ffmpeg/include/libavformat": "./ffmpeg/include/libavformat/",
            "ffmpeg/include/libavutil": "./ffmpeg/include/libavutil/",
            "ffmpeg/include/libswresample": "./ffmpeg/include/libswresample/",
            "ffmpeg/include/libswscale": "./ffmpeg/include/libswscale/"
        }
    }
}
